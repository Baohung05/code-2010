import tkinter as tk
import random
import threading
import time

opened_windows = []

def dow():
    window = tk.Tk()
    screen_width = window.winfo_screenwidth()
    screen_height = window.winfo_screenheight()

    while True:
        a = random.randint(0, screen_width - 250)
        b = random.randint(0, screen_height - 40)
        overlap = any(abs(a - x) < 250 and abs(b - y) < 40 for x, y in opened_windows)
        if not overlap:
            break

    opened_windows.append((a, b))
    window.title ('20/10')
    window.geometry(f"250x40+{a}+{b}")
    tk.Label(window,
             text='Happy Vietnamese Womenâ€™s Day',
             bg='pink',
             font=('Lobster', 10),
             width=50,
             height=40).pack()
    window.mainloop()

threads = []
for i in range(500):
    t = threading.Thread(target=dow)
    threads.append(t)
    time.sleep(0.03)
    threads[i].start()
